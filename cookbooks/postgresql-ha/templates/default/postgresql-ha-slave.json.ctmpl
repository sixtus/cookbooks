{
  "service": {
    "name": "postgresql-{{env "CLUSTER" | toLower }}",
    "address": <%= node[:ipaddress].to_json %>,
    "port": 5432,
    "tags": ["slave"],
    "checks": [
      {
        "script": "/var/app/consul/shared/config/services/postgresql-ha-check-slave.sh",
        "interval": "1s"
      }
    ]
  }
}
